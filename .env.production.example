# Database
DATABASE_URL="file:./app.db"

# Security Keys (Generate new ones for production!)
# openssl rand -hex 32
ENCRYPTION_KEY="your-production-encryption-key-here"
SESSION_SECRET="your-production-session-secret-here"
CSRF_SECRET="your-production-csrf-secret-here"

# IBM Cloud Object Storage
IBM_COS_ENDPOINT="https://s3.us-south.cloud-object-storage.appdomain.cloud"
IBM_COS_ACCESS_KEY_ID="your-cos-access-key-id"
IBM_COS_SECRET_ACCESS_KEY="your-cos-secret-access-key"
IBM_COS_REGION="us-south"
IBM_COS_BUCKET_NAME="your-voting-app-bucket"

# Next.js
NEXTAUTH_URL="https://your-app-domain.us-south.codeengine.appdomain.cloud"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# App Configuration
NODE_ENV="production"
PORT="3000"

# Logging
LOG_LEVEL="info"

# Rate Limiting
REDIS_URL="optional-redis-url-for-distributed-rate-limiting"

# Email (Optional - for notifications)
SMTP_HOST="optional-smtp-server"
SMTP_PORT="587"
SMTP_USER="optional-smtp-user"
SMTP_PASS="optional-smtp-password"